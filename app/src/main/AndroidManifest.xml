<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.projectmanager">

    <application
        android:name=".FirebaseApplication"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:hardwareAccelerated="true">

        <activity
            android:name=".ui.issue.IssuesFragment"
            android:configChanges="orientation|screenSize">
        </activity>
        <activity android:name=".ui.extra.ScanActivity" />
        <activity
            android:name=".ui.project.CreateProjectActivity"
            android:label="@string/create_new_project" />
        <activity
            android:name=".ui.project.JoinProjectActivity"
            android:label="@string/project_join_project" />
        <activity
            android:name=".ui.settings.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity android:name=".ui.user_creation.UserCreationActivity" />
        <activity
            android:name=".ui.project.ProjectActivity"
            android:configChanges="orientation|screenSize"
            android:label="ProjectPage"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.start.StartActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_start_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.auth.ResetPasswordActivity" />
        <activity android:name=".ui.auth.LoginActivity" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="fullSensor"
            tools:replace="screenOrientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>