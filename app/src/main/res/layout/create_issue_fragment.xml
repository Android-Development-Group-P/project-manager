<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.issue.CreateIssueFragment">

    <data>
        <variable
            name="viewModel"
            type="com.example.projectmanager.ui.issue.CreateIssueViewModel" />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00BCD4">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".ui.issue.CreateIssueFragment" >

            <EditText
                android:id="@+id/issueTitleInput"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="50dp"
                android:background="#FFFFFF"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:hint="@string/issue_hint_title"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:text="@={viewModel.title}"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/issueDescriptionInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="50dp"
                android:background="#FFFFFF"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:gravity="top"
                android:hint="@string/issue_hint_description"
                android:inputType="textMultiLine"
                android:lines="5"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:scrollbars="vertical"
                android:singleLine="false"
                android:text="@={viewModel.description}"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/issueTitleInput" />

            <View
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="-10dp"
                android:layout_marginBottom="-10dp"
                android:background="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/priorityDropdown"
                app:layout_constraintEnd_toEndOf="@+id/issueDescriptionInput"
                app:layout_constraintStart_toStartOf="@+id/issueDescriptionInput"
                app:layout_constraintTop_toTopOf="@+id/priorityDropdown" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="24dp"
                android:layout_weight="1"
                android:text="@string/issue_set_priority"
                app:layout_constraintStart_toStartOf="@+id/issueDescriptionInput"
                app:layout_constraintTop_toBottomOf="@+id/issueDescriptionInput" />

            <Spinner
                android:id="@+id/priorityDropdown"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="10dp"
                android:gravity="right"
                app:layout_constraintEnd_toEndOf="@+id/issueDescriptionInput"
                app:layout_constraintStart_toEndOf="@+id/textView7"
                app:layout_constraintTop_toBottomOf="@+id/issueDescriptionInput" />

            <View
                android:id="@+id/view5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="-10dp"
                android:background="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/assignToUserDropdown"
                app:layout_constraintEnd_toEndOf="@+id/issueDescriptionInput"
                app:layout_constraintStart_toStartOf="@+id/issueDescriptionInput"
                app:layout_constraintTop_toTopOf="@+id/assignToUserDropdown" />

            <Spinner
                android:id="@+id/assignToUserDropdown"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="19dp"
                android:gravity="right"
                app:layout_constraintEnd_toEndOf="@+id/priorityDropdown"
                app:layout_constraintStart_toEndOf="@+id/textView8"
                app:layout_constraintTop_toBottomOf="@+id/priorityDropdown" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/issue_assign_to_user"
                app:layout_constraintStart_toStartOf="@+id/textView7"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <View
                android:id="@+id/view6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="-10dp"
                android:background="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/labelDropdown"
                app:layout_constraintEnd_toEndOf="@+id/issueDescriptionInput"
                app:layout_constraintStart_toStartOf="@+id/issueDescriptionInput"
                app:layout_constraintTop_toTopOf="@+id/labelDropdown" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/issue_add_label"
                app:layout_constraintStart_toStartOf="@+id/textView8"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />

            <Spinner
                android:id="@+id/labelDropdown"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="19dp"
                android:gravity="right"
                app:layout_constraintEnd_toEndOf="@+id/assignToUserDropdown"
                app:layout_constraintStart_toEndOf="@+id/textView9"
                app:layout_constraintTop_toBottomOf="@+id/assignToUserDropdown" />

            <Button
                android:id="@+id/issueSubmitButton"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="50dp"
                android:fontFamily="sans-serif"
                android:onClick="@{viewModel::onCreateIssue}"
                android:text="@string/issue_submit_button"
                android:textAllCaps="false"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/labelDropdown" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>